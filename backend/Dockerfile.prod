FROM python:3.9-alpine

WORKDIR /code
ENV WORKERS=9

COPY main.py ./main.py
COPY requirements.txt ./requirements.txt
COPY start.py ./start.py

COPY routers ./routers
COPY public ./public

RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

EXPOSE 8000

CMD ["python", "start.py"]
